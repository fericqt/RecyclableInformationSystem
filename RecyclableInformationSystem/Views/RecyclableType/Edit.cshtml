
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/RecyclableType/_RecyclableTypePage.cshtml";
}
@model RecyclableInformationSystem.Models.RecyclableType

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">List</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
            <button class="btn btn-outline-success" type="button" onclick="history.back()">Go Back</button>
            <a class="btn btn-outline-success" type="button" href="@Url.Action("Add", "RecyclableType")">Add</a>
        </div>
    </div>
</nav>


<div class="container-fluid">
    <div class="row">
        <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
            <div class="position-sticky pt-3">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("List", "RecyclableItem")">
                            Recyclable Items
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("List", "RecyclableType")">
                            Recyclable Types
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <h2 class="text-center mb-4">Recyclable Items</h2>
            <div class="card-body">
                <form method="post" action="@Url.Action("EditData", "RecyclableType")">
                    <div class="form-group">
                        <label for="Id">ID:</label>
                        <input readonly type="number" class="form-control" id="Id" name="Id" value="@Model.Id" required/>
                    </div>
                    <div class="form-group">
                        <label for="Type">Type:</label>
                        <input type="text" class="form-control" id="Type" name="Type" value="@Model.Type" required/>
                    </div>
                    <div class="form-group">
                        <label for="Rate">Rate:</label>
                        <input type="number" class="form-control" id="Rate" name="Rate" value="@Model.Rate" required/>
                    </div>
                    <div class="form-group">
                        <label for="MinKg">Min Kg:</label>
                        <input type="number" class="form-control" id="MinKg" name="MinKg" value="@Model.MinKg" required/>
                    </div>
                    <div class="form-group">
                        <label for="MaxKg">Max Kg:</label>
                        <input type="number" class="form-control" id="MaxKg" name="MaxKg" value="@Model.MaxKg" required/>
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <button type="button" class="btn btn-secondary">Reset</button>
                    </div>
                </form>
            </div>
        </main>
    </div>
</div>
